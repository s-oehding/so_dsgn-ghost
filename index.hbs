{{!< default}}
<div id="top" class="post-header">
	{{#tag}}
	    <div class="header-image parallax-window parallax-background" data-parallax="scroll" {{#if image}} data-image-src="{{image}}" {{else}}data-image-src="http://placekitten.com/g/1920/1080" {{/if}}></div>
	    <section class="meta">
	        <div class="post-title-content os-animation" data-os-animation="fadeInUp" data-os-animation-delay="0.25s">
	            <h1 class="">{{{title}}}</h1><h1 class="">{{{name}}}</h1>
	        </div>
	        <hr>
	    </section>
	{{/tag}}
</div>

<div id="post-index" class="container">

	<main class="content" role="main">
	
		{{>loop}}
	
	</main>

</div>