{{!< default}}
{{#post ~}}
<div id="top" class="post-header">
    <div class="header-image parallax-window" data-parallax="scroll" {{#if image}} data-image-src="{{image}}" {{else}}data-image-src="http://placekitten.com/g/1920/1080" {{/if}}></div>
    <section class="meta">
        <div class="post-title-content os-animation" data-os-animation="fadeInUp" data-os-animation-delay="0.25s">
            <h1 class="">{{{title}}}</h1>
        </div>
        <hr>
    </section>
    {{!-- <div class="post-title os-animation" data-os-animation="fadeInUp" data-os-animation-delay="0.25s">
        <h1 class="">{{{title}}}</h1>
    </div> --}}
</div>
<section class="post">
    <section id="post-content" class="layout-row-top">
        

        <article itemtype="http://schema.org/BlogPosting" class="content post {{post_class}} medium-8 small-12 columns">
            <div id="post" class="post-content">
                {{content}}
            </div>
        </article>
        <aside class="medium-4 small-12 right columns" data-sticky-container>
            <div class="sticky post-meta" data-sticky data-sticky-on="small" data-anchor="post" data-margin-top="5" style="width: 100%;">
                <h5>Meta:</h5>
                <hr>
                <span class="date">
                    <i class="fa fa-clock-o"></i>
                    <time class="timesince date" data-timesince="{{date format='X'}}" datetime="{{date format='YYYY-MM-DDTHH:mm'}}" title="{{date format='DD MMMM YYYY'}}">{{date published_at timeago='true'}}</time>
                </span>
                <br/><br/><br/>
                {{#author}}<span class="author"><i class="fa fa-user"></i> <a href="{{url}}">{{name}}</a></span>{{/author}}
                <br/><br/><br/>
                <h5>Tags:</h5>
                <hr>
                {{#if tags}}
                    <div class="tags small button-group">
                        {{#foreach tags}}
                            <a href="{{url}}" title="{{name}}" class="button tag-{{id}}">{{name}}</a>
                        {{/foreach}}
                    </div>
                {{/if}}
              <div id="read-progress" class="progress" role="progressbar" tabindex="0" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                  <div class="progress-meter"></div>
                </div>
            </div>
        </aside>
    </section>
</section>
{{~/post}}

