
<section class="layout-row-top">
<div class="small-12 columns"><h3 class="section-title">Leistungen<hr class="h-line"></h3></div>
	{{#foreach posts}}
		{{#has tag="services"}}
	         <article class="small-12 medium-6 large-4 columns service-item revealer" data-animation-in="fadeInUp" data-animation-out="fadeOutDown" data-os-animation-delay=".25s">
			    <div class="card">
			        <div class="card-image  service-icon">
			            <img src="{{image}}" alt="{{{title}}}">
			        </div>
			        <div class="card-content">
			            <h4 class="portfolio-item-title">{{{title}}}<hr class="h-line"></h4>
			            {{{content}}}
			        </div>
			    </div>
			</article>
	    {{/has}}
	{{~/foreach}}
</section>
