<section id="feed" class="layout-row-center feed">
    {{#foreach posts}}
    <article class="{{post_class}}">
        <div class="row card">
            <div class="small-12 medium-6 columns post-image no-pad">
                <div class="card-image">
                    <a href="{{url}}" class="post-link" title="{{{title}}}" alt="{{{title}}}">
                        <img src="{{image}}" title="{{{title}}}" alt="{{{title}}}">
                    </a>
                </div>
            </div>
            <div class="small-12 medium-6 columns card-content ">
                <section class="post-content">
                    <a href="{{url}}" class="post-link" title="{{{title}}}" alt="{{{title}}}"><h3 class="post-title">{{{title}}}<hr class="h-line"></h3></a>
                    <p>{{excerpt words=25}}â€¦</p>
                </section>
                <section class="post-meta callout">
                    - <span class="date"><i class="fa fa-clock-o"></i> <a href="{{url}}"><time class="timesince" data-timesince="{{date format='X'}}" datetime="{{date format='YYYY-MM-DDTHH:mm'}}" title="{{date format='D MMMM YYYY'}}">{{date published_at timeago='true'}}</time></a></span>
                    {{#author}}<span class="author"><i class="fa fa-user"></i> <a href="{{url}}">{{name}}</a></span>{{/author}}
                    {{#if tags}}<span class="tags"><i class="fa fa-tags"></i>
                        <span>
                        {{tags prefix="" separator=", "}}</span>
                    </span>{{/if}}
                </section>
            </div>
        </div>
    </article>
    {{~/foreach}}
</section>
{{pagination}}